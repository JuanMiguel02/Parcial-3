<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.demo.Controllers.CitasController">

    <!-- ======= TITULO ======= -->
    <top>
        <Label text="Gestión de Citas"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20 0 20 0;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- ======= CENTRO ======= -->
    <center>
        <VBox spacing="20">

            <!-- ============= FORMULARIO ============= -->
            <TitledPane text="Registrar Cita">
                <GridPane hgap="15" vgap="15">

                    <!-- PACIENTE -->
                    <Label text="Paciente:" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="cmbPacientes"
                              GridPane.columnIndex="1"
                              prefWidth="240">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </ComboBox>

                    <!-- BUSCAR DOCUMENTO -->
                    <Label text="Buscar por documento:" GridPane.rowIndex="1"/>
                    <HBox spacing="10" GridPane.columnIndex="1">
                        <TextField fx:id="txtBuscarDocumento" promptText="Documento"/>
                        <Button text="Buscar" onAction="#onBuscarPaciente"/>
                    </HBox>

                    <!-- NOMBRE PACIENTE -->
                    <Label text="Nombre:" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtNombrePaciente"
                               GridPane.columnIndex="1"
                               editable="false"/>

                    <!-- DOCUMENTO PACIENTE -->
                    <Label text="Documento:" GridPane.rowIndex="3"/>
                    <TextField fx:id="txtDocumentoPaciente"
                               GridPane.columnIndex="1"
                               editable="false"/>

                    <!-- TELEFONO PACIENTE -->
                    <Label text="Teléfono:" GridPane.rowIndex="4"/>
                    <TextField fx:id="txtTelefonoPaciente"
                               GridPane.columnIndex="1"
                               editable="false"/>

                    <!-- FECHA -->
                    <Label text="Fecha:" GridPane.rowIndex="5"/>
                    <DatePicker fx:id="dtFecha"
                                GridPane.columnIndex="1"/>

                    <!-- HORA -->
                    <Label text="Hora:" GridPane.rowIndex="6"/>
                    <TextField fx:id="txtHora"
                               GridPane.columnIndex="1"
                               promptText="HH:MM"/>

                    <!-- MÉDICO -->
                    <Label text="Médico:" GridPane.rowIndex="7"/>
                    <ComboBox fx:id="cmbMedicos"
                              GridPane.columnIndex="1"
                              prefWidth="240">
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </ComboBox>

                    <!-- MOTIVO -->
                    <Label text="Motivo:" GridPane.rowIndex="8"/>
                    <TextField fx:id="txtMotivo"
                               GridPane.columnIndex="1"
                               promptText="Motivo de la cita"/>

                    <!-- PRECIO -->
                    <Label text="Precio:" GridPane.rowIndex="9"/>
                    <TextField fx:id="txtPrecio"
                               GridPane.columnIndex="1"
                               promptText="Valor de la consulta"/>

                    <!-- OBSERVACIONES -->
                    <Label text="Observaciones:" GridPane.rowIndex="10"/>
                    <TextArea fx:id="txtObservaciones"
                              GridPane.columnIndex="1"
                              prefRowCount="3"/>

                    <!-- BOTONES -->
                    <HBox spacing="15" GridPane.rowIndex="11" GridPane.columnIndex="1">
                        <Button text="Guardar" onAction="#onGuardarCita"
                                style="-fx-font-size: 14px;"/>
                        <Button text="Limpiar" onAction="#onLimpiarCampos"
                                style="-fx-font-size: 14px;"/>
                    </HBox>

                </GridPane>
            </TitledPane>

            <!-- ============= TABLA DE CITAS ============= -->
            <TitledPane text="Citas Registradas">
                <TableView fx:id="tblCitas" prefHeight="300">

                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                        <TableColumn fx:id="colHora" text="Hora" prefWidth="100"/>
                        <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="180"/>
                        <TableColumn fx:id="colMedico" text="Médico" prefWidth="180"/>
                        <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100"/>
                        <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="180"/>
                    </columns>

                </TableView>
            </TitledPane>

        </VBox>
    </center>

</BorderPane>
