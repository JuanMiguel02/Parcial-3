<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.demo.Controllers.ClientesController"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    <children>
        <!-- Panel de formulario -->
        <AnchorPane style="-fx-border-color: black;"
                    AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="250.0" AnchorPane.bottomAnchor="220.0">
            <children>
                <!-- Labels alineados a la izquierda -->
                <VBox layoutX="20.0" layoutY="20.0" spacing="30" prefWidth="120.0">
                    <children>
                        <Label text="Nombre:" style="-fx-label-padding: 0 0 10;">
                            <font><Font size="18.0" /></font>
                        </Label>
                        <Label text="Documento:" style="-fx-label-padding: 0 0 10;">
                            <font><Font size="18.0" /></font>
                        </Label>
                        <Label text="Telefono:" style="-fx-label-padding: 0 0 10;">
                            <font><Font size="18.0" /></font>
                        </Label>
                        <Label text="Dirección:" style="-fx-label-padding: 0 0 10;">
                            <font><Font size="18.0" /></font>
                        </Label>
                        <Label text="Correo:" style="-fx-label-padding: 0 0 10;">
                            <font><Font size="18.0" /></font>
                        </Label>
                    </children>
                </VBox>

                <!-- TextFields que se expanden horizontalmente -->
                <TextField fx:id="txtNombre" layoutX="150.0" layoutY="20.0"
                           prefHeight="35.0" AnchorPane.leftAnchor="150.0"
                           AnchorPane.rightAnchor="20.0" />
                <TextField fx:id="txtDocumento" layoutX="150.0" layoutY="70.0"
                           prefHeight="35.0" AnchorPane.leftAnchor="150.0"
                           AnchorPane.rightAnchor="20.0" />
                <TextField fx:id="txtTelefono" layoutX="150.0" layoutY="120.0"
                           prefHeight="35.0" AnchorPane.leftAnchor="150.0"
                           AnchorPane.rightAnchor="20.0" />
                <TextField fx:id="txtDireccion" layoutX="150.0" layoutY="170.0"
                           prefHeight="35.0" AnchorPane.leftAnchor="150.0"
                           AnchorPane.rightAnchor="20.0" />
                <TextField fx:id="txtCorreo" layoutX="150.0" layoutY="220.0"
                           prefHeight="35.0" AnchorPane.leftAnchor="150.0"
                           AnchorPane.rightAnchor="20.0" />
            </children>
        </AnchorPane>

        <!-- Panel de botones -->
        <VBox spacing="15" AnchorPane.topAnchor="57.0" AnchorPane.rightAnchor="27.0"
              AnchorPane.bottomAnchor="406.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onGuardarCliente"
                        prefHeight="40.0" prefWidth="150.0"
                        style="-fx-background-color: #2ECC71; -fx-background-radius: 8;"
                        text="Guardar">
                    <cursor><Cursor fx:constant="HAND" /></cursor>
                    <font><Font name="Trebuchet MS Bold" size="14.0" /></font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#onEliminarCliente"
                        prefHeight="40.0" prefWidth="150.0"
                        style="-fx-background-color: #E74C3C; -fx-background-radius: 8;"
                        text="Eliminar">
                    <cursor><Cursor fx:constant="HAND" /></cursor>
                    <font><Font name="Trebuchet MS Bold" size="14.0" /></font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#onActualizarCliente"
                        prefHeight="40.0" prefWidth="150.0"
                        style="-fx-background-color: #3498DB; -fx-background-radius: 8;"
                        text="Actualizar">
                    <cursor><Cursor fx:constant="HAND" /></cursor>
                    <font><Font name="Trebuchet MS Bold" size="14.0" /></font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="onLimpiarCampos" mnemonicParsing="false"
                        prefHeight="40.0" prefWidth="150.0"
                        style="-fx-background-color: #BDC3C7; -fx-background-radius: 8;"
                        text="Limpiar Campos">
                    <cursor><Cursor fx:constant="HAND" /></cursor>
                    <font><Font name="Trebuchet MS Bold" size="14.0" /></font>
                </Button>
            </children>
        </VBox>

        <!-- Tabla con padding superior -->
        <ScrollPane AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="366.0"
                    fitToWidth="true" fitToHeight="true">
            <content>
                <AnchorPane>
                    <children>
                        <TableView fx:id="tblClientes"
                                   AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0"
                                   AnchorPane.topAnchor="0.0"
                                   tableMenuButtonVisible="true">
                            <columns>
                                <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre" />
                                <TableColumn fx:id="colDocumento" prefWidth="120.0" text="Documento" />
                                <TableColumn fx:id="colTelefono" prefWidth="120.0" text="Telefono" />
                                <TableColumn fx:id="colDireccion" prefWidth="200.0" text="Dirección" />
                                <TableColumn fx:id="colCorreo" prefWidth="180.0" text="Correo" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>